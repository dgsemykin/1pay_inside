mixin field(className, placeholder, icon, value, disabled, error, status)
  .field(class!=className)
    if (label)
      .field__label= label
    label.field__body(class!=attributes.class)
      if status
        .field__status(class!=status.class)= status.msg
      input.field__input(type='text', placeholder!=placeholder, value!=value, disabled!=disabled)
      if (icon)
        .field__icon
          img(src!=icon)
      if error
        .field__error= error

mixin field-cvv(className, placeholder, inverse)
  .field(class!=className)
    //.field__label CVC
    label.field__body
      .field__icon
        img(src='./img/lock.png')
      input.field__input(type='password', inputmode='numeric', placeholder!=placeholder)
      .field__icon.field__icon._cvc.tooltip
        img(src='./img/cvc.png')
        if (!inverse)
          .tooltip__text CVC код располагается на обратной стороне карты.
        else
          .tooltip__text._inverse CVC код располагается на обратной стороне карты.

