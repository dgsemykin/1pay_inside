      if attributes.status
        .field__status(class!=attributes.status.class)= attributes.status.msg
      textarea.field__textarea(placeholder!=attributes.placeholder, disabled!=attributes.disabled)= attributes.value
      if (attributes.icon)
        .field__icon
          img(src!=attributes.icon)
      if error
        .field__error= error

mixin field-password
  .field(class!=attributes.class)
    if (attributes.label)
      .field__label= attributes.label
    label.field__body(class=attributes.noIcon ? "without-icon" : "")
      if attributes.status
        .field__status(class!=attributes.status.class)= attributes.status.msg
      input.field__input(type='password', placeholder!=attributes.placeholder, value!=attributes.value, disabled!=attributes.disabled)
      if (attributes.icon)
        .field__icon
          img(src!=attributes.icon)
      else if (!attributes.noIcon)
        .field__icon
          img(src='./img/icons/password.svg')
      if (attributes.togglePswd)
        i.field__toggle-pswd
      if error
        .field__error= attributes.error

