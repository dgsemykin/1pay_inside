mixin field(className, placeholder, icon, value, disabled, error, status)
  .field(class!=className)
    if (label)
      .field__label= label
    label.field__body(class!=attributes.class)
      if status
        .field__status(class!=status.class)= status.msg
      input.field__input(type='text', placeholder!=placeholder, value!=value, disabled!=disabled)
      if (icon)
        .field__icon
          img(src!=icon)
      if error
        .field__error= error

mixin field-cvv(className, placeholder, inverse)
  .field(class!=className)._required
    label.field__body
      input.field__input(type='text', tabindex='3', inputmode='numeric', placeholder!=placeholder)
      .field__icon
        .field__icon-pic._lock
      .field__icon._cvc.tooltip
        .field__icon-pic._help
        if (!inverse)
          .tooltip__text Трехзначный номер на&nbsp;обратной&nbsp;стороне вашей карты
            img.tooltip__cvc(src='./img/cvc-code.svg')
        else
          .tooltip__text._inverse Трехзначный номер на&nbsp;обратной&nbsp;стороне вашей карты
            img.tooltip__cvc(src='./img/cvc-code.svg')

mixin field-card(value, icon)
  .field.card-form__number._required
    .field__body
      .field__error Введите корректный номер карты
      input.field__input(type='text', tabindex='1', autofocus, inputmode='numeric', placeholder='Введите номер карты')
      .field__icon
        .field__icon-pic._card
      .field__type-icon

mixin field-validity(value)
  .card-form__row
    .field.card-form__validity._required
      label.field__body
        input.field__input(type='text', tabindex='2', inputmode='numeric', placeholder='12        24', value!=value)
        .field__icon
          .field__icon-pic._calendar
        if (icon)
          .field__type-icon(class!=icon)

mixin field-phone(className, label, value, icon)
  .field(class!=className)
