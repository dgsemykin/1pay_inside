include ../field

mixin notifications-email
  .notification-settings.popup(data-popup='notifications-email')
    .popup__header
      .popup__title Электронная почта
      .popup__close(data-event="popup-close", data-popup='notifications-email')
    .popup__body
      .notification-settings__notice Введите адрес электронной почты, который хотите настроить.
      if (!attributes.filled)
        +field('', 'Эл. почта', 'my@company.ru', './img/email.svg')
      else
        +field('', 'Эл. почта', 'my@company.ru', './img/email.svg', 'my@company.ru', true, null, {msg: attributes.status.msg, class: attributes.status.class})
    .popup__footer
      button.btn._green(data-event="popup-close", data-popup='notifications-email')= attributes.filled ? 'Изменить' : 'Подтвердить'

