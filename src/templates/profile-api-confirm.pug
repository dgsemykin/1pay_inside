extends ./layouts/profile/profile-api

include ./layouts/switch
include ./layouts/field

block api
  .profile-api
    .profile-api__container
      .profile-api__column
        .profile-api__title API Key
        .profile-api__row
          +field('', 'API Key', '', './img/profile/key.svg', 'a7zlUF85afRvZrgoOBJJpOmFLcBz0phb')
          .field__resend
      .profile-api__column
        .profile-api__title Сертификат
          +switch
        .profile-api__notice Для усиления безопасности доступа к API Mpay включите авторизацию с помощью SSL сертификата.

      .popup__wrap
        .popup.profile-api__popup._confirm
          .popup__header
            .popup__title Подтверждение
            .popup__close
          .popup__body
            .profile-api__notice Введите ваш текущий пароль от личного кабинета для подтверждения действия
            +field-password(label='Пароль', placeholder='********')
            button.btn._green.profile-api__popup-btn Готово
            .clr