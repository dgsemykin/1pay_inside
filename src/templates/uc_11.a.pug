extends layouts/payment-form/index

include ./layouts/header
include ./layouts/chosen-payway
include ./layouts/payment-info-row
include ./layouts/outcard
include ./layouts/footer

block content
  .card
    +header-v01('./files/logos/park-uno.png', 'parkuno.ru', 'Счет №154')
    .card__body
      +chosen-payway('Bitcoin', './img/payways/bitcoin.png')
      .payment-info
        +payment-info-row('Включена комиссия 50 ₽.', '_alert')
        .payment-info__row
          .payment-info__icon._wallet
          .payment-info__text
            span Минимальная сумма оплаты &#8203;
              span.solid 100 000 SATOSHI
              |  &#8203;
              span.solid (0, 00001 BTC).
    +footer-v01('Оплатить', '1 024', '50', '₽')
    +outcard
